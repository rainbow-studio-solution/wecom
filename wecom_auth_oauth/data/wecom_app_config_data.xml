<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- 1 -->
        <record id="wecom_app_config_authentication_auth_redirect_uri" model="wecom.app_config">
            <field name="app_id" ref="wecom_contacts.wecom_app_first_self_app"/>
            <field name="name">Callback link address redirected after authorization</field>
            <field name="key">auth_redirect_uri</field>
            <field name="ttype">char</field>
            <field name="value">http://xxx.xxx.com:port/wxowrk_auth_oauth/authorize</field>
            <field name="description" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Fill in the "Corp ID", "AgentId" and "Secret" that require authentication and authorization, and use the domain name to access,
                    <span style="color:orange;">
                        Click the button "One-click to set up WeCom OAuth"
                    </span>
                </p>
            </field>
        </record>

        <!-- 2 -->
        <record id="wecom_app_config_authentication_qr_redirect_uri" model="wecom.app_config">
            <field name="app_id" ref="wecom_contacts.wecom_app_first_self_app"/>
            <field name="name">Scan the QR code to log in and call back the link address</field>
            <field name="key">qr_redirect_uri</field>
            <field name="ttype">char</field>
            <field name="value">http://xxx.xxx.com:port/wxowrk_auth_oauth/qr</field>
            <field name="description" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Fill in the "Corp ID", "AgentId" and "Secret" that require authentication and authorization, and use the domain name to access,
                    <span style="color:orange;">
                        Click the button "One-click to set up WeCom OAuth"
                    </span>
                </p>
            </field>
        </record>


    </data>
</odoo>